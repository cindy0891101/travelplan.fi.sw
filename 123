  "total_amount": 120.50,
  "currency": "EUR",
  "payer_id": "user_A_id",      // èª°å…ˆå¢ŠéŒ¢çš„
  "split_members": ["user_A", "user_B", "user_C"], // åƒèˆ‡å¹³åˆ†çš„äºº
