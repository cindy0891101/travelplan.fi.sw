import React, { useState } from 'react';

const ExpenseCalculator = () => {
  const [amount, setAmount] = useState('0');
  const [currency, setCurrency] = useState('EUR'); // EUR æˆ– TWD
  const rate = 35; // å‡è¨­æ­å…ƒåŒ¯ç‡

  // æ¨¡æ“¬æˆå“¡åå–®ï¼ˆæœªä¾†å¾ Firebase æŠ“å–ï¼‰
  const [members, setMembers] = useState([
    { id: '1', name: 'æˆ‘', selected: true },
    { id: '2', name: 'å°æ˜', selected: true },
    { id: '3', name: 'å°è¯', selected: true },
  ]);

  const toggleMember = (id) => {
    setMembers(members.map(m => m.id === id ? { ...m, selected: !m.selected } : m));
  };

  const selectedCount = members.filter(m => m.selected).length;
  const splitAmount = selectedCount > 0 ? (parseFloat(amount) / selectedCount).toFixed(2) : 0;

  const handleNumber = (num) => {
    setAmount(prev => prev === '0' ? num : prev + num);
  };

  return (
    <div className="flex flex-col h-screen bg-[#F5EBE0] p-6 font-sans text-[#6B5E4C]">
      {/* 1. ç½®é ‚å¤§æŒ‰éˆ•è¨ˆç®—æ©Ÿå€åŸŸ */}
      <div className="bg-[#FEFAE0] rounded-[32px] p-6 shadow-sm mb-6">
        <div className="flex justify-between items-center mb-4">
          <button 
            onClick={() => setCurrency(currency === 'EUR' ? 'TWD' : 'EUR')}
            className="bg-[#D4A373] text-white px-4 py-1 rounded-full text-sm font-bold shadow-md"
          >
            {currency} â‡‹ {currency === 'EUR' ? 'TWD' : 'EUR'}
          </button>
          <span className="text-xs opacity-60">ä»Šæ—¥åŒ¯ç‡ ç´„ 1:{rate}</span>
        </div>
        
        <div className="text-right text-5xl font-bold mb-2 truncate">
          {amount} <span className="text-xl">{currency}</span>
        </div>
        
        {currency === 'EUR' && (
          <div className="text-right text-lg opacity-50">
            â‰ˆ {(amount * rate).toLocaleString()} TWD
          </div>
        )}
      </div>

      {/* 2. åˆ†å¸³æˆå“¡é¸æ“‡å€ */}
      <div className="mb-6">
        <p className="text-sm font-bold mb-3 ml-2">åˆ†å¸³æˆå“¡ ({selectedCount} äºº)</p>
        <div className="flex gap-3 overflow-x-auto pb-2 no-scrollbar">
          {members.map(m => (
            <button
              key={m.id}
              onClick={() => toggleMember(m.id)}
              className={`px-5 py-2 rounded-full whitespace-nowrap transition-all ${
                m.selected ? 'bg-[#CCD5AE] text-[#6B5E4C] shadow-inner' : 'bg-white opacity-60'
              }`}
            >
              {m.name} {m.selected ? 'âœ“' : ''}
            </button>
          ))}
        </div>
        <p className="text-center mt-4 text-[#D4A373] font-bold">
          æ¯äººéœ€ä»˜ï¼š{splitAmount} {currency}
        </p>
      </div>

      {/* 3. ä¹å®®æ ¼å¤§æŒ‰éˆ• (è¨ˆç®—æ©Ÿéµç›¤) */}
      <div className="grid grid-cols-3 gap-3 flex-grow mb-20">
        {[1, 2, 3, 4, 5, 6, 7, 8, 9, 'C', 0, '.'].map((btn) => (
          <button
            key={btn}
            onClick={() => {
              if (btn === 'C') setAmount('0');
              else handleNumber(btn.toString());
            }}
            className="bg-white hover:bg-[#FEFAE0] active:scale-95 transition-all rounded-[24px] text-2xl font-bold shadow-sm flex items-center justify-center h-16"
          >
            {btn}
          </button>
        ))}
      </div>
    </div>
  );
};

export default ExpenseCalculator;
