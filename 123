npx create-react-app travel-nordic-app
cd travel-nordic-app
npm install lucide-react firebase tailwindcss postcss autoprefixer
npx tailwindcss init -p
/** @type {import('tailwindcss').Config} */
module.exports = {
  content: ["./src/**/*.{js,jsx,ts,tsx}"],
  theme: {
    extend: {
      colors: {
        'nordic-bg': '#F5EBE0',      // 淺咖背景
        'nordic-cream': '#FEFAE0',   // 奶油色調
        'nordic-wood': '#D4A373',    // 木質棕 (按鈕/強調)
        'nordic-dark': '#6B5E4C',    // 深咖文字
        'nordic-green': '#CCD5AE',   // 鼠尾草綠 (勾選/選中)
      },
      borderRadius: {
        'nordic': '24px',
      }
    },
  },
  plugins: [],
}
import React, { useState } from 'react';
import LandingPage from './components/LandingPage';
import ItineraryTimeline from './components/ItineraryTimeline';
import FloatingCalc from './components/FloatingCalc';

function App() {
  const [started, setStarted] = useState(false);

  return (
    <div className="min-h-screen bg-nordic-bg text-nordic-dark font-sans">
      {!started ? (
        <LandingPage onStart={() => setStarted(true)} />
      ) : (
        <>
          <main className="pb-32">
            <ItineraryTimeline />
          </main>
          
          {/* 全域懸浮計算機 */}
          <FloatingCalc />
          
          {/* 置中長條新增按鈕 */}
          <div className="fixed bottom-8 left-0 right-0 px-6 flex justify-center z-40">
            <button className="w-full max-w-md bg-nordic-dark text-nordic-cream py-4 rounded-2xl font-bold shadow-xl active:scale-95 transition-transform">
              ＋ 新增旅程項目
            </button>
          </div>
        </>
      )}
    </div>
  );
}

export default App;
npx create-react-app travel-nordic-app
cd travel-nordic-app
npm install lucide-react firebase tailwindcss postcss autoprefixer
npx tailwindcss init -p
